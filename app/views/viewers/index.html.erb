<div class='container'>
  <div class='row'>
    <div class='col s12 m6 l12 '> 

      <h1><%= t('visor.viewers') %></h1>

      <table>
        <thead>
          <tr>
            <th><%= t('visor.name') %></th>
            <th><%= t('visor.last_name') %></th>
            <th><%= t('visor.birth') %></th>
            <th><%= t('visor.telephone') %></th>
            <th><%= t('visor.club') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @viewers.each do |viewer| %>
            <tr>
              <td><%= viewer.name %></td>
              <td><%= viewer.last_name %></td>
              <td><%= viewer.birth %></td>
              <td><%= viewer.telephone %></td>
              <td><%= viewer.club %></td>
              <td><%= link_to t('visor.edit'), edit_viewer_path(viewer) %></td>
              <% if can? :crud, Viewer %>
              <td><%= link_to t('visor.destroy'), viewer, method: :delete, data: { confirm: t('visor.alert_sure') } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to t('visor.new_viewer'), new_viewer_path, { class: 'btn' } %>
   </div>
  </div>
</div>