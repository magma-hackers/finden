<div class="container container-sign-up">
  <div class="row row-sign-up">
    <div class="s12 m6 col-forgot-pass">
      <div class="card">
        <div class="c-contener">
          <h3><%= t('.forgot_your_password') %></h3>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            
            <div class="actions div-btn">
              <%= f.submit t('new.send_me_reset_password_instructions'), class: "waves-effect waves-light btn btn-style" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
