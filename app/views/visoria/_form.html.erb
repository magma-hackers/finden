<div class="row">
  <%= form_with(model: visorium, local: true, html: { class: 'col s12'}) do |form| %>
    <% if visorium.errors.any? %>
      <div id='error_explanation'>
        <h2><%= pluralize(visorium.errors.count, 'errores') %><%= t('visoria.forbidden_message') %></h2>

        <ul>
          <% visorium.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class='field'>
        <%= form.label t('visoria.date') %>
        <%= form.date_field :date %>
      </div>
    </div>
    <div class="row">
      <div class='field'>
        <%= form.label t('visoria.place'), for: "place" %>
        <%= form.text_area :place, id:'place' %>
      </div>
    </div>

    <div class="row">
      <div class='field'>
        <%= form.label t('visoria.schedule') %>
        <%= form.text_field :schedule %>
      </div>
    </div>

    <div class="row">
      <div class="field">
        <%= form.label 'Club' %><br/>
        <%= form.label @search_club %>
      </div>
    </div>

    <div class="row">
      <div class='field'>
        <%= form.label t('visoria.description') %>
        <%= form.text_area :description %>
      </div>
    </div>

    <div class="row">
      <div class='field'>
        <%= form.label t('visoria.category') %>
        <%= form.text_area :category %>
      </div>
    </div>

    <div class='actions'>
      <%= link_to t('visoria.back') , visoria_path, { class: 'blue-text text-darken-2' } %>
      <%= form.submit t('visoria.send'), { class: 'btn' } %>
    </div>
  <% end %>
