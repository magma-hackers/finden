<div class='container'>
  <div class='row'>
    <div class='col s12 m6 l12 '> 
    <h1><%= t('technique.technique') %></h1>

    <table>
      <thead>
        <tr>
          <th><%= t('technique.principal_position') %></th>
          <th><%= t('technique.secondary_position') %></th>
          <th><%= t('technique.strong_foot') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @techniques.each do |technique| %>
          <tr>
            <td><%= technique.principal_position %></td>
            <td><%= technique.secondary_position %></td>
            <td><%= technique.strong_foot %></td>
            <td><%= link_to t('technique.edit'), edit_technique_path(technique) %></td>
            <% if can? :destroy, technique %>
              <td><%= link_to t('technique.destroy'), technique, method: :delete, data: { confirm: t('technique.alert_message') } %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to t('technique.button_new'), new_technique_path, { class: 'btn' } %>
    </div>
  </div>
</div>
